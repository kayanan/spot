{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/src/*":["src/*"],
      "@/utils/*": ["src/utils/*"],
      "@/utils": ["src/utils/index.ts"],
      "@/modules/*": ["src/modules/*"],
      "@/config": ["src/config/index.ts"],
      "@/types/*": ["src/types/*"],
      "package": ["package.json"]
    },
    "types": ["node", "jest"]
  },
  "include": ["src", "src/types", "*.js", "package.json"],
  "exclude": ["node_modules", ".vscode", "dist", "tests"]
}
